<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/cardview_light_background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD STUDENT"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/fragment_students_create_edit_text_fio"
        android:layout_width="200dp"
        android:hint="@string/viewholder_students_text_view_name"
        android:layout_height="45dp"/>

    <EditText
        android:id="@+id/fragment_students_create_edit_text_group"
        android:layout_width="200dp"
        android:hint="@string/viewholder_students_text_view_group"
        android:layout_height="45dp"/>

    <EditText
        android:id="@+id/fragment_students_create_edit_text_mark"
        android:layout_width="200dp"
        android:inputType="number"
        android:hint="@string/viewholder_students_text_view_mark"
        android:layout_height="45dp"/>

    <EditText
        android:id="@+id/fragment_students_create_edit_text_detail"
        android:layout_width="200dp"
        android:hint="@string/viewholder_students_text_view_description"
        android:layout_height="45dp"/>

    <TextView
        android:id="@+id/fragment_students_create_text_view_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/red"/>

    <Button
        android:id="@+id/fragment_students_create_button_add"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="add"/>


    <Button
        android:id="@+id/fragment_students_create_button_cancel"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="cancel"/>

</LinearLayout>