    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/fragment_students_information_image_view_avatar"
        android:layout_width="300dp"
        android:layout_height="250dp"/>

    <TextView
        android:id="@+id/fragment_students_information_text_view_fio"
        android:layout_width="200dp"
        android:layout_height="45dp"/>

    <TextView
        android:id="@+id/fragment_students_information_text_view_detail"
        android:layout_width="200dp"
        android:layout_height="45dp"/>

</LinearLayout>